@model AttendenceMgmt.Models.Designation_Master_tbl
@{
    ViewBag.Title = "Designation";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<script src="~/Resources/js/jquery-3.4.1.min.js"></script>
<h2> Add Designation</h2>
<div class="row"  style="margin-left:2%">@using (Html.BeginForm("Designation", "Admin", FormMethod.Post, new
    {
        enctype = "multipart/form-data"
    }))
{
  
    <div class="col-md-4">
        <label>Designation</label>
        <div class="input-group">
            <span class="input-group-addon">
                <i class="material-icons">person</i>
            </span>
            <div class="form-line">
                @Html.TextBoxFor(model => model.Designation, new { @placeholder = " ", @class = "form-control ", @autocomplete = "off", Required = "true" })
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <label></label>
        <div class="input-group pd">
            <input type="submit" class="form-control btn bg-in waves-effect" style="background-color:#333;color:white" value=" submit">
        </div>
    </div>
}</div>

<h3>Designations List</h3>
@using System.Data;
@using AttendenceMgmt.Models;
<div class="=row" style="margin-top:3%">
    <div class="table-responsive">
        <table class="table table-bordered table-striped table-hover js-basic-example dataTable">
            <thead>
                <tr>
                    <th>Sr. No</th>
                    <th>Designation</th>
                    <th>CompanyName</th>
                    <th>Status</th>
                </tr>
            </thead>

            <tbody>

                @{
                    DbManager db = new DbManager();
                    DataTable dttt = db.GetDesignationReport();

                    if (dttt.Rows.Count > 0)
                    {
                        int j = 0;
                        for (int i = 0; dttt.Rows.Count > i; i++)
                        {
                            j++;
                            <tr><td>@j</td><td>@dttt.Rows[i]["Designation"]</td><td>@dttt.Rows[i]["CompanyName"]</td><td>@dttt.Rows[i]["Status"]</td><</tr>

                        }
                    }
                }


            </tbody>
        </table>
    </div>

</div>
<script src="~/Resources/plugins/jquery/jquery.min.js"></script>
<script src="~/Resources/plugins/jquery-datatable/jquery.dataTables.js"></script>
<script src="~/Resources/plugins/jquery-datatable/skin/bootstrap/js/dataTables.bootstrap.js"></script>
<script src="~/Resources/plugins/jquery-datatable/extensions/export/dataTables.buttons.min.js"></script>
