@model AttendenceMgmt.Models.Department_Master_tbl
@{
    ViewBag.Title = "Department";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<script src="~/Resources/js/jquery-3.4.1.min.js"></script>
<h2> Add Department</h2>
<div class="row" style="margin-top:3%">   
     @using (Html.BeginForm("Department", "Admin", FormMethod.Post, new
    {
        enctype = "multipart/form-data"
    }))
{
    <div class="row" style="margin-left:2%">
     
        <div class="col-md-4">
            <label>Department</label>
            <div class="input-group">
                <span class="input-group-addon">
                    <i class="material-icons">person</i>
                </span>
                <div class="form-line">
                    @Html.TextBoxFor(model => model.Department, new { @placeholder = "Department ", @class = "form-control ", @autocomplete = "off", Required = "true" })
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <label></label>
            <div class="input-group pd">
                <input type="submit" class="form-control btn bg-in waves-effect" style="background-color:#333;color:white" value=" submit">
            </div>
        </div>
    </div>

}</div>
<h3>Department List</h3>
@using System.Data;
@using AttendenceMgmt.Models;
<div class="=row" >
    <div class="table-responsive">
        <table class="table table-bordered table-striped table-hover js-basic-example dataTable">
            <thead>
                <tr>

                    <th>Sr. No</th>
                    <th>Department</th>
                    <th>CompanyName</th>
                    <th>Status</th>
              

                </tr>
            </thead>

            <tbody>

                @{
                    DbManager db = new DbManager();
                    DataTable dttt = db.GetDepartmentReport();

                    if (dttt.Rows.Count > 0)
                    {
                        int j = 0;
                        for (int i = 0; dttt.Rows.Count > i; i++)
                        {
                            j++;
                            <tr><td>@j</td><td>@dttt.Rows[i]["Department"]</td><td>@dttt.Rows[i]["CompanyName"]</td><td>@dttt.Rows[i]["Status"]</td><</tr>

                        }
                    }
                }


            </tbody>
        </table>
    </div>

</div>



    


