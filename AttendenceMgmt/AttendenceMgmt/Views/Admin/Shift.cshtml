
@{
    ViewBag.Title = "Shift";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<script src="~/Resources/js/jquery-3.4.1.min.js"></script>
<h3> Add Shift</h3>
@model AttendenceMgmt.Models.Shift_Master_tbl


<div class="row" style="margin-left:2%">    @using (Html.BeginForm("Shift", "Admin", FormMethod.Post, new
    {
        enctype = "multipart/form-data"
    }))
{
   
    <div class="col-md-4">
        <label>Shift</label>
        <div class="input-group">
            <span class="input-group-addon">
                <i class="material-icons">person</i>
            </span>
            <div class="form-line">
                @Html.TextBoxFor(model => model.Shift, new { @placeholder = " ", @class = "form-control ", @autocomplete = "off", Required = "true" })
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <label></label>
        <div class="input-group pd">
            <input type="submit" class="form-control btn bg-in waves-effect" style="background-color:#333;color:white" value=" submit">
        </div>
    </div>
}
</div>


@using System.Data;
@using AttendenceMgmt.Models;
<h4>Shift List</h4>
<div class="=row">
    <div class="table-responsive">
        <table class="table table-bordered table-striped table-hover js-basic-example dataTable">
            <thead>
                <tr>

                    <th>Sr. No</th>
                    <th>Shift</th>
                    <th>CompanyName</th>
                    <th>Status</th>


                </tr>
            </thead>

            <tbody>

                @{
                    DbManager db = new DbManager();
                    DataTable dttt = db.GetShiftReport();

                    if (dttt.Rows.Count > 0)
                    {
                        int j = 0;
                        for (int i = 0; dttt.Rows.Count > i; i++)
                        {
                            j++;
                            <tr><td>@j</td><td>@dttt.Rows[i]["Shift"]</td><td>@dttt.Rows[i]["CompanyName"]</td><td>@dttt.Rows[i]["Status"]</td><</tr>
                        }
                    }
                }
            </tbody>
        </table>
    </div>

</div>
